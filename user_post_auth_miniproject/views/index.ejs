<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create User</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white">

    <div class="container mx-auto p-8">
        <h1 class="text-4xl font-bold text-center mb-8 text-yellow-400">Create User</h1>
        <div class="max-w-lg mx-auto bg-gray-800 p-8 rounded-md shadow-md">


            <form action="/register" method="POST" class="space-y-6">
                <!-- Username -->
                <div>
                    <label for="username" class="block text-lg font-medium text-white">Username</label>
                    <input type="text" id="username" name="username" class="w-full p-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-yellow-400">
                </div>

                <!-- Name -->
                <div>
                    <label for="name" class="block text-lg font-medium text-white">Name</label>
                    <input type="text" id="name" name="name" class="w-full p-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-yellow-400">
                </div>

                <!-- Age -->
                <div>
                    <label for="age" class="block text-lg font-medium text-white">Age</label>
                    <input type="number" id="age" name="age" class="w-full p-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-yellow-400">
                </div>

                <!-- Email -->
                <div>
                    <label for="email" class="block text-lg font-medium text-white">Email</label>
                    <input type="email" id="email" name="email" class="w-full p-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-yellow-400">
                </div>

                <!-- Password -->
                <div>
                    <label for="password" class="block text-lg font-medium text-white">Password</label>
                    <input type="password" id="password" name="password" class="w-full p-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-yellow-400">
                </div>

                <!-- Submit Button -->
                <div>
                    <button type="submit" class="w-full bg-yellow-500 text-black font-semibold p-2 rounded-md hover:bg-yellow-400 transition duration-300">Create User</button>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
